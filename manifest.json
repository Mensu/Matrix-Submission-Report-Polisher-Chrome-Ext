{
  "manifest_version": 2,
  "name": "Matrix Submission Report Polisher",
  "version": "0.2.0",
  "description": "polish your submission report on Matrix",
  "icons": {
    "16": "img/online.png",
    "48": "img/online.png",
    "128": "img/online.png"
  },
  "page_action": {
    "default_icon": {
      "19": "img/online.png",
      "38": "img/online.png"
    },
    "default_title": "Matrix Submission Report Polisher",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "./js/outputs/polish_back.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.vmatrix.org.cn:*/*"
      ],
      "css": [
        "./css/polish.css"
      ],
      "js": [
        "./js/outputs/polish_front.js"
      ]
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "https://*.vmatrix.org.cn:*/*",
    "http://123.207.29.66:3001/api/*",
    "http://localhost:3000/*",
    "tabs",
    "webRequest"
  ]
}
